/* 自定义导航栏样式 */
/* 标题样式 */
.title-box {
  background: linear-gradient(135deg, #1E3A8A, #4169E1);
  border-radius: 20rpx;
  padding: 20rpx 15rpx;
  margin-bottom: 10rpx;
  text-align: center;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.title-box::after {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  z-index: 0;
}

.title {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
  position: relative;
  z-index: 1;
}

/* 进度条样式 */
.progress-bar-wrapper {
  margin: 20rpx 0 30rpx 0;
  padding: 0 10rpx;
}

.progress-bar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.progress-bar {
  width: 100%;
  height: 16rpx;
  background-color: #e0e6ed;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: inset 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 10rpx !important;
}

.progress-bar-inner {
  height: 100%;
  background: linear-gradient(90deg, #1E3A8A, #4169E1);
  border-radius: 20rpx;
  transition: width 0.5s cubic-bezier(0.22, 0.61, 0.36, 1);
  position: relative;
  box-shadow: 0 1rpx 3rpx rgba(65, 105, 225, 0.3);
}

.progress-bar-inner::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  width: 10rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 0 20rpx 20rpx 0;
}

.progress-text {
  font-size: 28rpx;
  color: #1E3A8A;
  font-weight: 500;
}

/* 问题内容样式 */
.question-content {
  background-color: #f9f9f9;
  border-radius: 16rpx;
  padding: 25rpx 20rpx;
  margin-bottom: 10rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border-left: 4rpx solid #1E3A8A;
}

.question-text {
  font-size: 36rpx;
  line-height: 1.6;
  color: #333333;
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* 选项样式 */
.options-box {
  margin-bottom: 10rpx !important;
  padding-bottom: 100rpx; /* 为底部固定的导航按钮留出空间 */
}

.option-item {
  background: #ffffff;
  border: 1px solid #e0e0e0;
  border-radius: 12rpx;
  margin: 15rpx 0;
  padding: 20rpx 15rpx;
  position: relative;
  overflow: hidden;
  transform: none; /* 移除初始位移，确保状态切换时不会有残留效果 */
  /* 添加动画效果 */
  transition: all 0.3s ease;
}

.option-item.active {
  background: #f0f7ff;
  border-color: #4169E1;
  transform: scale(1.02); /* 添加轻微放大效果 */
  box-shadow: 0 4rpx 12rpx rgba(65, 105, 225, 0.25);
  animation: selectPulse 0.5s ease;
}

.option-text {
  font-size: 32rpx;
  color: #444444;
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
  letter-spacing: 0.3rpx;
  line-height: 1.5;
}

/* 进度条样式 */
.progress-bar-container {
  margin-bottom: 40rpx;
}

.progress-percent {
  font-size: 28rpx;
  color: #1E3A8A;
  display: block;
  text-align: center;
  margin-bottom: 10rpx;
}

/* 导航按钮样式 */
.nav-buttons {
    display: flex;
    justify-content: space-between;
    width: 100%;
    position: relative;
    bottom: auto;
    left: 0;
    right: 0;
    padding: 20rpx 0;
    box-sizing: border-box;
    z-index: 10;
    margin-top: 20rpx;
}

.nav-btn {
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #1E3A8A, #4169E1);
  color: #fff;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.3);
  transition: all 0.3s ease;
}

.nav-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(30, 58, 138, 0.2);
}

.nav-btn.disabled {
  background: #e0e6ed;
  color: #999;
  box-shadow: none;
  pointer-events: none;
}

/* 返回主页按钮样式 */
.home-btn {
  position: fixed;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 20rpx;
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #1E3A8A;
  border-radius: 50rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 215, 0, 0.3);
  font-weight: bold;
}

.home-btn:active {
  transform: translateY(-50%) scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(255, 215, 0, 0.2);
}

/* 结果弹窗样式 */
.result-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.result-content {
  background: white;
  width: 80%;
  padding: 40rpx;
  border-radius: 24rpx;
  animation: scaleIn 0.3s ease;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
}

@keyframes scaleIn {
  from { transform: scale(0.8); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

/* 选项选中动画 */
@keyframes selectPulse {
  0% { transform: scale(1); box-shadow: 0 2rpx 10rpx rgba(65, 105, 225, 0.15); }
  50% { transform: scale(1.05); box-shadow: 0 6rpx 16rpx rgba(65, 105, 225, 0.3); }
  100% { transform: scale(1.02); box-shadow: 0 4rpx 12rpx rgba(65, 105, 225, 0.25); }
}

/* 勾选图标淡入动画 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateX(-10rpx); }
  to { opacity: 1; transform: translateX(0); }
}

.result-title {
  display: block;
