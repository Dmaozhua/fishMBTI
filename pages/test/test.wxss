/* 主题色 */
:root {
  --primary-blue: #1E3A8A;       /* 主色 */
  --light-blue: #4169E1;        /* 渐变辅助色 */
  --bg-gray: #F8F9FA;           /* 背景浅灰 */
  --text-dark: #333333;         /* 主文本色 */
  --text-medium: #666666;       /* 次文本色 */
  --hover-effect: rgba(30, 58, 138, 0.08); /* hover遮罩 */
}

/* 统一字体 */
body, text {
  font-family: 'PingFang SC', 'Helvetica Neue', sans-serif;
  font-weight: 400;
  letter-spacing: 0.5rpx;
}
/* 标题层级 */
.title { font-size: 40rpx; font-weight: 600; }
.section-title, .recommend-title { font-size: 34rpx; font-weight: 500; }
.question-text { font-size: 34rpx; line-height: 1.8; }
.option-text { font-size: 32rpx; line-height: 1.6; }

.option-item {
  border-radius: 16rpx;              /* 圆角统一 */
  transition: none;                 /* 移除过渡动画，防止状态残留 */
  position: relative;
  overflow: hidden;
}
/* 移除hover效果，避免鼠标位置导致的视觉残留 */
.option-item.active {
  box-shadow: 0 4rpx 16rpx rgba(65, 105, 225, 0.2); /* 更强阴影 */
  border-color: var(--light-blue);   /* 选中边框色 */
  transform: none;                  /* 移除放大效果，避免切换题目时的残留 */
}
/* 选项文本增加左侧图标空间（预留交互区域） */
.option-text {
  padding-left: 58rpx;               /* 为可能的图标/标记预留空间 */
  position: relative;
  padding-right: 50rpx;
}
.option-item.active .option-text::before {
  content: "✅";                     /* 选中时显示勾选标记 */
  position: absolute;
  left: 15rpx;
  color: var(--light-blue);
  font-size: 32rpx;
  animation: fadeIn 0.3s ease;
}
.progress-info {
  margin: 30rpx 0;
}
