/* pages/result/result.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

/* 返回按钮 */
.back-btn {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 30rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50rpx;
  width: fit-content;
  backdrop-filter: blur(10rpx);
}

.back-icon {
  font-size: 36rpx;
  color: white;
  margin-right: 10rpx;
  font-weight: bold;
}

.back-text {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
}

/* 结果内容 */
.result-content {
  background: white;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  margin: 20rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.6s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.result-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 30rpx;
  line-height: 1.3;
}

/* MBTI类型图片 */
.result-image-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 30rpx 0 40rpx 0;
  padding: 20rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 25rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  animation: imageSlideIn 0.8s ease-out 0.3s both;
}

.result-image {
   width: 500rpx;
   height: 500rpx;
   border-radius: 20rpx;
   box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
   transition: transform 0.3s ease;
 }
 
 .result-image:hover {
   transform: scale(1.05);
 }
 
 /* 图片加载失败占位符 */
 .image-placeholder {
   width: 300rpx;
   height: 300rpx;
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
   background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
   border-radius: 20rpx;
   border: 3rpx dashed #90caf9;
 }
 
 .placeholder-icon {
   font-size: 80rpx;
   margin-bottom: 20rpx;
   opacity: 0.8;
 }
 
 .placeholder-text {
   font-size: 32rpx;
   font-weight: bold;
   color: #1976d2;
   opacity: 0.7;
 }

@keyframes imageSlideIn {
  from {
    opacity: 0;
    transform: translateY(30rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.result-percentage {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
  text-align: center;
  margin-bottom: 40rpx;
  padding: 10rpx 20rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  width: fit-content;
  margin-left: auto;
  margin-right: auto;
  transition: all 0.3s ease;
}

/* 高稀有度特效 */
.result-percentage.rare-effect {
  background: linear-gradient(135deg, #e6abab, #d6c49e, #98bac2, #ff9ff3);
  background-size: 400% 400%;
  color: white;
  font-weight: bold;
  font-size: 32rpx;
  padding: 15rpx 30rpx;
  box-shadow: 0 0 30rpx rgba(255, 107, 107, 0.6), 
              0 0 60rpx rgba(254, 202, 87, 0.4),
              0 0 90rpx rgba(72, 219, 251, 0.3);
  animation: rareGlow 3s ease-in-out infinite, gradientShift 4s ease-in-out infinite;
  position: relative;
  overflow: hidden;
}

.result-percentage.rare-effect::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  background: linear-gradient(45deg, #ff6b6b, #feca57, #48dbfb, #ff9ff3, #ff6b6b);
  background-size: 400% 400%;
  border-radius: 22rpx;
  z-index: -1;
  animation: gradientShift 4s ease-in-out infinite;
}

.result-percentage.rare-effect::after {
  content: '✨';
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  font-size: 24rpx;
  animation: sparkle 2s ease-in-out infinite;

}

@keyframes rareGlow {
  0%, 100% {
    box-shadow: 0 0 30rpx rgba(255, 107, 107, 0.6), 
                0 0 60rpx rgba(254, 202, 87, 0.4),
                0 0 90rpx rgba(72, 219, 251, 0.3);
  }
  50% {
    box-shadow: 0 0 40rpx rgba(255, 107, 107, 0.8), 
                0 0 80rpx rgba(254, 202, 87, 0.6),
                0 0 120rpx rgba(72, 219, 251, 0.5);
  }
}

@keyframes gradientShift {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

@keyframes sparkle {
  0%, 100% {
    opacity: 1;
    transform: scale(1) rotate(0deg);
  }
  50% {
    opacity: 0.7;
    transform: scale(1.2) rotate(180deg);
  }
}

/* 章节容器 */
.section-container {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  border-left: 8rpx solid #4A90E2;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.result-desc {
  display: block;
  font-size: 28rpx;
  color: #34495e;
  line-height: 1.6;
  text-align: justify;
}

/* 推荐区域 */
.recommend-section {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.recommend-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: white;
}

.recommend-item {
  background: rgba(255, 255, 255, 0.2);
  padding: 20rpx;
  margin-bottom: 15rpx;
  border-radius: 15rpx;
  font-size: 26rpx;
  line-height: 1.5;
  backdrop-filter: blur(10rpx);
}

.recommend-item:last-child {
  margin-bottom: 0;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.action-btn.secondary {
  background: white;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.action-btn:active {
  transform: scale(0.98);
  transition: transform 0.1s;
}

/* 分享按钮特殊效果 */
.share-btn {
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  animation: pulse 2s infinite;
}

.share-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s;
}

.share-btn:hover::before {
  left: 100%;
}

@keyframes pulse {
  0% {
    box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  }
  50% {
    box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.6), 0 0 0 8rpx rgba(102, 126, 234, 0.1);
  }
  100% {
    box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  }
}

/* 分享按钮点击效果 */
.share-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.6);
}

/* 无数据状态 */
.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  text-align: center;
}

.no-data-text {
  font-size: 32rpx;
  color: white;
  margin-bottom: 40rpx;
  opacity: 0.8;
}

.result-btn {
  background: white;
  color: #667eea;
  border-radius: 40rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .result-content {
    margin: 10rpx;
    padding: 40rpx 30rpx;
  }
  
  .result-title {
    font-size: 42rpx;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .action-btn {
    margin-bottom: 15rpx;
  }
}