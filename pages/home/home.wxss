/* Banner样式 */
.banner-section {
    margin: 20rpx 30rpx;
}

.banner-card {
    border-radius: 30rpx;
    padding: 40rpx 30rpx;
    background: linear-gradient(135deg, #2b5876 0%, #4e4376 100%);
    box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.15), 
                inset 0 -4rpx 12rpx rgba(255, 255, 255, 0.1);
    text-align: center;
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    border: none;
}

.banner-card::before {
    content: '';
    position: absolute;
    top: -30%;
    left: -30%;
    width: 200rpx;
    height: 200rpx;
    background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, rgba(255,255,255,0) 70%);
    border-radius: 50%;
    z-index: 0;
}

.banner-card::after {
    content: '';
    position: absolute;
    bottom: -40%;
    right: -30%;
    width: 220rpx;
    height: 220rpx;
    background: radial-gradient(circle, rgba(78,67,118,0.3) 0%, rgba(78,67,118,0) 70%);
    border-radius: 50%;
    z-index: 0;
}

.banner-content {
    position: relative;
    z-index: 2;
}

