/* 设置页面级别的背景色 */
page {
  background: linear-gradient(to bottom, #2C3E50 0%, #BDC3C7 70%, #ECF0F1 100%);
  height: 100%;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.page-container {
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  background: linear-gradient(to bottom, #5d646b 0%, #BDC3C7 70%, #ECF0F1 100%);
  position: relative;
  overflow: hidden;
  transition: background 0.3s ease;
    /* 添加顶部内边距，适配安全区域 */
    /* padding-top: calc(10rpx + env(safe-area-inset-top));  */
}

.container {
    padding: 20rpx;
    flex: 1;
    box-sizing: border-box;
    width: 100%;
    height: 100vh;
    background-color: transparent;
    -webkit-overflow-scrolling: touch; /* 保持滚动流畅 */
    margin-top: 10rpx; /* 根据实际情况调整这个值 */
}
.scroll-area::-webkit-scrollbar { display: none; 
height: 100%;
}
/* 隐藏滚动条 - 增强版，确保所有滚动元素的滚动条都被隐藏 */
.container::-webkit-scrollbar {
  display: none;
}
page::-webkit-scrollbar,
.page-container::-webkit-scrollbar,
scroll-view::-webkit-scrollbar {
    display: none;
    width: 0;
    height: 0;
    color: transparent;
}

/* 确保iOS设备也隐藏滚动条 */
.container,
page,
.page-container,
scroll-view {
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none;  /* IE and Edge */
}

